<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/link</item>
        <item name="colorPrimaryDark">@color/link</item>
        <item name="colorAccent">@color/dividers</item>
    </style>

    <style name="list_title" parent="list_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="list_clickable_text" parent="list_text">
        <item name="android:textColor">@color/link</item>
    </style>

    <style name="price_text" parent="list_title">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
